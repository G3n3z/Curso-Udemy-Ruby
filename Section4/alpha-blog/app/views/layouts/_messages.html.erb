<div class="container">
  <% flash.each do |name, msg| %>
    <% if  name == "notice"%>
      <% classe = "success" %>
    <%else %>
      <% classe= "danger" %>
    <%end %>
    <div class="alert alert-<%=classe %> alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>