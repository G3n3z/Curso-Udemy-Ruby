<div class="row justify-content-center">
  <div class="col-4 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-body">
        <h5 class="card-title mt-4"><%=link_to category.name, category_path(category), class: "text-success" %></h5>
        <p class="card-text"><%= pluralize(category.articles.count, "category") %></p>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%=time_ago_in_words(category.created_at) %></small>
        <small>Edited <%=time_ago_in_words(category.updated_at) %></small>

      </div>
    </div>
  </div>
</div>